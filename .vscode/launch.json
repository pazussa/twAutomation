{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: All tests (Chromium)",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "--project=chromium", "--headed"],
      "cwd": "${workspaceFolder}",
      "env": { "PWDEBUG": "1" },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: Current file",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "${relativeFile}", "--project=chromium", "--headed"],
      "cwd": "${workspaceFolder}",
      "env": { "PWDEBUG": "1" },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug: By title (set TEST_NAME)",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "-g", "${env:TEST_NAME}", "--project=chromium", "--headed"],
      "cwd": "${workspaceFolder}",
      "env": { "PWDEBUG": "1" },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}
